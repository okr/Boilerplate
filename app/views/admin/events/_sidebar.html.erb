<ul id="sidebar_nav" class="standard">
	<% for event in @events %>
	<li <%- if event == @event -%>class="active"<%- end -%>>
		<%= link_to event.title, admin_event_path(event) %>
		<ul class="sidebar_actions">
			<li>
				<%= link_to image_tag("/images/icons/shape_square_edit.png"), edit_admin_event_path(event), :title => "Edit this event." %>
			</li>
			<li>
				<%= link_to image_tag("/images/icons/delete.png"), admin_event_path(event), :confirm => 'Are you sure?', :method => :delete, :title => "Delete this event" %>
			</li>
		</ul>
	</li>
	<% end %>
</ul>