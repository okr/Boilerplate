<% content_for :head do %>
	<%= stylesheet_link_tag 'ui/ui-core', 'ui/ui-theme', 'ui/ui-datepicker', :cache => 'ui' %>
<% end %>
<% content_for :jstemplates do -%>
  <%= "var object='#{ generate_template(f, :photos) }'" %>
<% end %>
<fieldset>
	<div class="field_element">
		<label for="album_title">Title</label>
		<%= f.text_field :title, :class => "textfield" %>
	</div>
	<div class="field_element">
		<label for="album_description">Description</label>
		<%= f.text_area :description %>
	</div>
	<h4>Photos</h4>
	<div class="field_element" id="gallery_form">
		<%= render :partial => 'photos_form', :locals => {:f => f} %>
	</div>
</fieldset>
<div class="hr">
	&nbsp;
</div>
<% if controller.action_name == "edit" %>
<div id="timeline_event">
	<p>Last updated by <%= link_to sanitize(h(@album.user.name)), admin_user_path(@album.user) %> at <%= @album.updated_at %>
</div>
<% end %>
<div class="submit">
	<%= submit_tag 'save', :id => 'create' %><%= link_to 'cancel', admin_albums_url %>
</div>