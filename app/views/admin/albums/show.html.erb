<% content_for :head do %>
	<%= javascript_include_tag 'tiny_mce/tiny_mce', 'tiny-mce-config' %>
<% end %>
<% content_for :header do %>
	<%= render :partial => 'admin/shared/main_menu' %>
	<div id="sub_nav">
		<ul>
			<li>
				<%= link_to 'Albums', admin_albums_path, :title => "View all photo albums.", :class => "tip" %>
			</li>
			<li>
				<%= link_to 'Album', new_admin_album_path, :title => "Create a new album.", :class => "tip" %>
			</li>
		</ul>
	</div>
	<div id="search_menu">
		<%= render :partial => 'admin/shared/search/albums/non_ajax' %>
	</div>
<% end %>
<div id="sidebar">
	<%= render :partial => "sidebar" %>
</div>
<div id="content">
	<h3><%= sanitize @album.title %></h3>
	<div id="actions_menu">
		<ul class="actions">
			<li class="actions_left">
				&nbsp;
			<li>
			<li>
				<%= link_to "Edit", edit_admin_album_path(@album), :title => "Edit this album." %>
			</li>
			<li>
				<%= link_to "Delete", admin_album_path(@album), :title => "Delete this album.", :confirm => 'Are you sure?', :method => :delete %>
			</li>
			<li class="actions_right">
				&nbsp;
			<li>
		</ul>
	</div>
	<%= render :partial => "album" %>
</div>