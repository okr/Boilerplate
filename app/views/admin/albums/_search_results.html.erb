<% if @album_search.count > 0 %>
<table class="table" border="0" cellpadding="0" cellspacing="0">
	<thead class="search">
		<tr>
			<th><%= order @album_search, :by => :title %></th>
			<th><%= order @album_search, :by => :created_at, :text => "Created" %></th>
			<th><%= order @album_search, :by => :updated_at, :text => "Updated" %></th>
			<th class="table_actions">Actions</th>
		</tr>
	</thead>
	<tfoot>
		<tr>
			<td colspan="4">
				<div class="pagination search">
					<%= will_paginate @album_results, :param_name => :search_page %>
				</div>
			</td>
		</tr>
	</tfoot>
	<tbody>
		<%= render :partial => 'albums', :collection => @album_results %>
	</tbody>
</table>
<%- end -%>