<% content_for :header do %>
	<%= render :partial => 'admin/shared/main_menu' %>
	<div id="sub_nav">
		<ul>
			<li>
				<%= link_to 'Show All Pages', admin_pages_path %>
			</li>
			<li>
				<%= link_to 'Create Page', new_admin_page_path %>
			</li>
		</ul>
	</div>
	<div id="search_menu">
		<%= render :partial => 'admin/shared/search/pages/non_ajax' %>
	</div>
<% end %>
<div id="sidebar">
	<%= render :partial => "sidebar" %>	
</div>
<div id="content">
	<h3><span class="cat_type">Page</span> <%= sanitize(h(@page.name)) %></h3>
	<div id="actions_menu">
		<ul class="actions">
			<li class="actions_left">
				&nbsp;
			<li>
			<li>
				<%= link_to "Edit", edit_admin_page_path(@page), :title => "Edit this page." %>
			</li>
			<li>
				<%= link_to "Delete", admin_page_path(@page), :title => "Delete this page.", :confirm => 'Are you sure?', :method => :delete %>
			</li>
			<li>
				<%= link_to "Public", page_path(@page), :title => "View this page's public page.", :rel => 'external' %>
			</li>
			<li class="actions_right">
				&nbsp;
			<li>
		</ul>
		<ul class="actions">
			<li class="actions_left">
				&nbsp;
			<li>
			<li class="timeline_event">
				Last updated by <%= link_to sanitize(h(@page.user.name)), admin_user_path(@page.user) %> at <%= @page.updated_at %>
			</li>
			<li class="actions_right">
				&nbsp;
			<li>
		</ul>
	</div>
	<%= render :partial => "page" %>
</div>