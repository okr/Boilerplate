<h4 class="toggler">Main Information</h4>
<div class="attribute_box box_toggle">
	<div class="attributes_left">
		<p>
			<strong>Category</strong>&nbsp;:&nbsp;<%=h @page.page_category.title %>
		</p>
		<% if @page.published %>
		<p>
			<strong>Published</strong>
		</p>
		<% else %>
		<p>
			Unpublished
		</p>
		<% end %>
		<% if @page.home %>
		<p>
			<strong>Home Page</strong>
		</p>
		<% end %>
	</div>
	<div class="attributes_right">
		<p>
			<strong>Title</strong> : <%= sanitize(h(@page.title)) %>
		</p>
	</div>
	<div class="clear">&nbsp;</div>
</div>
<h4 class="toggler">Body</h4>
<div class="attribute_box box_toggle">
	<%= sanitize @page.body %>
</div>