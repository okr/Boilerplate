<h4 class="toggler">Main Information</h4>
<div class="attribute_box box_toggle">
	<div class="attributes_left">
		<p>
			<strong>Category</strong>&nbsp;:&nbsp;<%= @link.link_category.title %>
		</p>
		<% if @link.admin %>
		<p>
			<strong>Private</strong>
		</p>
		<% else %>
		<p>
			Public
		</p>
		<% end %>
	</div>
	<div class="attributes_right">
		<p>
			<strong>Link</strong>&nbsp;:&nbsp;<%= link_to sanitize(h(@link.title)), @link.url %>
		</p>
		<p>
			<strong>URL</strong>&nbsp;:&nbsp;<%= @link.url %>
		</p>
	</div>
	<div class="clear">&nbsp;</div>
</div>