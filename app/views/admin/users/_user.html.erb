<h4 class="toggler">Main Information</h4>
<div class="attribute_box box_toggle">
	<div class="attributes_left">
		<% if @user.photo %>
		<p id="avatar">
			<%= link_to image_tag(@user.photo.image.url(:thumb)), @user.photo.image.url, :class => "modal" %>
		</p>
		<% end %>
	</div>
	<div class="attributes_right">
		<p>
			<strong>Login : </strong>
			<%=h @user.login %>
		</p>
		<p>
			<strong>Email : </strong>
			<%= link_to @user.email, "mailto:#{@user.email}" %>
		</p>
		<p>
			<strong>Role : </strong>
			<%=h @user.role.name %>
		</p>
	</div>
	<div class="clear">&nbsp;</div>
</div>
<h4 class="toggler">Profile</h4>
<div class="attribute_box box_toggle" style="display:none;">
	<%= @user.profile %>
</div>
<h4 class="toggler">Additional Details</h4>
<div class="attribute_box box_toggle" style="display:none;">
	<p>
		<strong>Login Count : </strong>
		<%=h @user.login_count %>
	</p>
	<p>
		<strong>Last Request At : </strong>
		<%=h @user.last_request_at %>
	</p>
	<p>
		<strong>Last Login At : </strong>
		<%=h @user.last_login_at %>
	</p>
	<p>
		<strong>Current Login At : </strong>
		<%=h @user.current_login_at %>
	</p>
	<p>
		<strong>Last Login IP : </strong>
		<%=h @user.last_login_ip %>
	</p>
	<p>
		<strong>Current Login IP : </strong>
		<%=h @user.current_login_ip %>
	</p>
</div>