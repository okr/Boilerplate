<% content_for :header do %>
	<%= render :partial => 'admin/shared/main_menu' %>
	<%= error_messages_for :user %>
	<div id="sub_nav">
		<ul>
			<li>
				<%= link_to 'Show All Users', admin_users_path %>
			</li>
			<li>
				<%= link_to 'Create User', new_admin_user_path %>
			</li>
		</ul>
	</div>
	<div id="search_menu">
		<%= render :partial => 'admin/shared/search/users/non_ajax' %>
	</div>
<% end %>
<div id="sidebar">
	<%= render :partial => "sidebar" %>
</div>
<div id="content">
	<h3><span class="cat_type">Editing User</span> <%= sanitize @user.name %></h3>
	<div id="actions_menu">
		<ul class="actions">
			<li class="actions_left">
				&nbsp;
			<li>
			<li>
				<%= link_to "View", admin_user_path(@user) %>
			</li>
			<li>
				<%= link_to "Delete", admin_user_path(@user), :confirm => 'Are you sure you want to delete this user?', :method => :delete %>
			</li>
			<li class="timeline_event">
				Last updated at <%= @user.updated_at %>
			</li>
			<li class="actions_right">
				&nbsp;
			<li>
		</ul>
	</div>
	<% form_for [:admin, @user], :url => admin_user_path, :html => { :multipart => true, :method => :put } do |f| %>
		<%= render :partial => "form", :object => f %>
	<% end %>
</div>