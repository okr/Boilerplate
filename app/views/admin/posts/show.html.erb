<% content_for :header do %>
	<%= render :partial => 'admin/shared/main_menu' %>
	<div id="sub_nav">
		<ul>
			<li>
				<%= link_to 'View All Posts', admin_posts_path %>
			</li>
			<li>
				<%= link_to 'Create Post', new_admin_post_path %>
			</li>
		</ul>
	</div>
	<div id="search_menu">
		<%= render :partial => 'admin/shared/search/posts/ajax' %>
	</div>
<% end %>
<div id="sidebar">
	<%= render :partial => "sidebar" %>
</div>
<div id="content">
	<h3><span class="cat_type">Post</span> <%= sanitize @post.title %></h3>
	<div id="actions_menu">
		<ul class="actions">
			<li class="actions_left">
				&nbsp;
			<li>
			<li>
				<%= link_to "Edit", edit_admin_post_path(@post), :title => "Edit this post." %>
			</li>
			<li>
				<%= link_to "Delete", admin_post_path(@post), :title => "Delete this post.", :confirm => 'Are you sure?', :method => :delete %>
			</li>
			<li class="actions_right">
				&nbsp;
			<li>
		</ul>
		<ul class="actions">
			<li class="actions_left">
				&nbsp;
			<li>
			<li class="timeline_event">
				Last updated by <%= link_to sanitize(h(@post.user.name)), admin_user_path(@post.user) %> at <%= @post.updated_at %>
			</li>
			<li class="actions_right">
				&nbsp;
			<li>
		</ul>
	</div>
	<%= render :partial => "post" %>
</div>